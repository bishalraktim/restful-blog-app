<%- include("partials/header.ejs") %>

<!-- <h3><%= blogs %></h3> -->

<div class="ui container huge header text">RESTful Blog App</div>

<div class="ui text container segment">
	<div class="ui divided items">
		<% blogs.forEach(function(blog){ %>
			<div class="item">
				<div class="image">
					<img src="<%= blog.image %>">
				</div>

				<div class="content">
					<a class="header"><%= blog.title %></a>
					<div class="meta">
						<span>
							<%= new Date(blog.created.setHours(blog.created.getHours() + 
															   11)).toDateString() %>
						</span>
					</div>

					<div class="description">
						<p><%= blog.body.substring(0, 100) %>.....</p>
					</div>

					<div class="extra">
						<a class="ui inverted primary button" href="/blogs/<%= blog._id %>">
							Read More <i class="chevron right icon"></i></a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer.ejs") %>